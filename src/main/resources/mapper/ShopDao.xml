<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.o2o.dao.ShopDao" >

	<resultMap id="shopMap" type="com.o2o.entity.Shop">
		<!-- 主键 -->
		<id column="shop_id" property="shopId" />
		<!--column对应库表中的字段名 property对应实体类中的属性名 -->
		<result column="shop_name" property="shopName" />
		<result column="shop_desc" property="shopDesc" />
		<result column="shop_addr" property="shopAddr" />
		<result column="phone" property="phone" />
		<result column="priority" property="priority"/>
		<result column="shop_img" property="shopImg" />
		<result column="create_time" property="createTime" />
		<result column="last_edit_time" property="lastEditTime" />
		<result column="enable_status" property="enableStatus" />
		<result column="advice" property="advice" />

		<!-- 复合对象 -->
		<association column="owner_id" property="owner" javaType="com.o2o.entity.PersonInfo">
			<id column="user_id" property="userId" />
			<result column="user_name" property="userName" />
		</association>

		<association column="area_id" property="area" javaType="com.o2o.entity.Area">
			<id column="area_id" property="areaId" />
			<result column="area_name" property="areaName" />
		</association>

		<association property="shopCategory" column="shop_category_id" javaType="com.o2o.entity.ShopCategory">
			<id column="shop_category_id" property="shopCategoryId" />
			<result column="shop_category_name" property="shopCategoryName" />
		</association>
	</resultMap>

	<select id="selectByShopId"  parameterType="long" resultMap="shopMap">
		SELECT
		s.shop_id,
		s.shop_name,
		s.shop_desc,
		s.shop_addr,
		s.phone,
		s.shop_img,
		s.priority,
		s.create_time,
		s.last_edit_time,
		s.enable_status,
		s.advice,
		a.area_id,
		a.area_name,
		sc.shop_category_id,
		sc.shop_category_name
		FROM
		tb_shop s,
		tb_area a,
		tb_shop_category sc
		WHERE
		s.area_id = a.area_id
		AND s.shop_category_id = sc.shop_category_id
		AND s.shop_id = #{iii}
	</select>


    <insert id="insertShop"
			useGeneratedKeys="true"
			keyColumn="shop_id"
			keyProperty="shopId" >
		insert into tb_shop (area_id,shop_category_id,owner_id,shop_name,shop_desc,shop_addr,phone,priority,create_time,enable_status,last_edit_time,advice)
		value (#{area.areaId},#{shopCategory.shopCategoryId},#{owner.userId},#{shopName},#{shopDesc},#{shopAddr},#{phone},#{priority},#{createTime},#{enableStatus},#{lastEditTime},#{advice})
	</insert>


	<update id="updateShop" parameterType="com.o2o.entity.Shop">
	update tb_shop
	<set>
		<if test="shopName != null">shop_name = #{shopName},</if>
		<if test="shopDesc != null">shop_desc = #{shopDesc},</if>
		<if test="shopAddr != null">shop_addr = #{shopAddr},</if>
		<if test="phone != null">phone = #{phone},</if>
		<if test="shopImg != null">shop_img = #{shopImg},</if>
		<if test="priority != null">priority = #{priority},</if>
		<if test="enableStatus != null">enable_status = #{enableStatus},</if>
		<if test="lastEditTime != null">last_edit_time = #{lastEditTime},</if>
		<if test="advice != null">advice = #{advice},</if>
		<if test="shopCategory != null">shop_category_id = #{shopCategory.shopCategoryId},</if>
		<if test="area != null">area_id = #{area.areaId}</if>
	</set>
	where shop_id = #{shopId}
	</update>


	<select id="selectShopList" resultMap="shopMap">
		SELECT
		s.shop_id,
		s.shop_name,
		s.shop_desc,
		s.shop_addr,
		s.phone,
		s.shop_img,
		s.priority,
		s.create_time,
		s.last_edit_time,
		s.enable_status,
		s.advice,
		a.area_id,
		a.area_name,
		sc.shop_category_id,
		sc.shop_category_name

		FROM
		tb_shop s,
		tb_area a,
		tb_shop_category sc

		<where>
			<include refid="selectShopByCondition"/>
			AND s.area_id=a.area_id
			AND s.shop_category_id=sc.shop_category_id
			AND s.enable_status=1
		</where>


		ORDER BY s.priority DESC
		LIMIT #{rowIndex},#{pageSize};

	</select>


	<select id="selectShopCount" parameterType="com.o2o.entity.Shop" resultType="int">
		SELECT
		count(1)
		FROM
		tb_shop s,
		tb_area a,
		tb_shop_category sc
		<where>
			<include refid="selectShopByCondition"/>
			AND s.area_id=a.area_id
			AND s.shop_category_id=sc.shop_category_id
			AND s.enable_status=1
		</where>

	</select>

	<sql id="selectShopByCondition">
		<!-- 商铺名（要求模糊查询） -->
		<if test="shopCondition.shopName!=null">
			and s.shop_name like concat('%',#{shopCondition.shopName},'%')
			<!-- AND s.shop_name like '%${shopCondition.shopName}%' -->
		</if>

		<!-- 区域查询-->
		<if test="shopCondition.area!=null and shopCondition.area.areaId!=null" >AND s.area_id=#{shopCondition.area.areaId}</if>

		<!-- 店铺状态 -->
		<if test="shopCondition.enableStatus!=null">AND s.shop_enable_status=#{shopCondition.enableStatus}</if>

		<!-- owner  -->
		<if test="shopCondition.owner!=null and shopCondition.owner.userId!=null" >AND s.owner_id=#{shopCondition.owner.userId}</if>

		<!-- 店铺类别  直接给出店铺类别Id-->
		<if test="shopCondition.shopCategory!=null and shopCondition.shopCategory.shopCategoryId!=null" >
			AND s.shop_category_id=#{shopCondition.shopCategory.shopCategoryId}
		</if>

		<!-- 这里的已知条件是一级类别Id 因商铺均属于某个二级类别，所以先基于parentId找出shopCategoryId-->
		<if test="shopCondition.shopCategory != null and shopCondition.shopCategory.parent != null
		and shopCondition.shopCategory.parent.shopCategoryId != null">
			and s.shop_category_id in (SELECT shop_category_id FROM tb_shop_category
			WHERE parent_id = #{shopCondition.shopCategory.parent.shopCategoryId})
		</if>

	</sql>

</mapper>